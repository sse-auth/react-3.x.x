{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "lib": ["ES2022", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "types": ["nodemailer", "react"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "./src/apperaence"]
}
