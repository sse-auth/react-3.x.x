{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["ES2022", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "types": ["nodemailer"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
